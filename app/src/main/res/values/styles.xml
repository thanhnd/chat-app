<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/purge</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="editTextStyle">@style/App_EditText</item>
        <item name="imageButtonStyle">@style/App_ImageButton</item>
        <item name="android:windowBackground">@drawable/bg</item>
        <item name="actionBarStyle">@style/App_ActionBar</item>


    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_loading</item>
    </style>

    <style name="OnboardingTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/bg_loading</item>
    </style>

    <style name="App_EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/edit_text_color</item>
        <item name="android:textColorHint">@color/edit_text_hint_color</item>
        <item name="android:background">@drawable/edit_text_bg_sharpe</item>
        <item name="android:paddingBottom">10dp</item>

    </style>

    <style name="App_TextViewClickableStyle" parent="TextAppearance.AppCompat.Medium.Inverse">
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/edit_text_color</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="App_ImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">?selectableItemBackgroundBorderless</item>

    </style>

    <style name="TextAppearance.Small" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.Small.TransparentBackGround">
        <item name="android:background">#00000000</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="TextAppearance.Small.UnderLine">
        <item name="android:background">#00000000</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TextAppearance.Large" parent="@android:style/TextAppearance.Large">

    </style>

    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="CollapsingTextAppearance" parent="Base.TextAppearance.AppCompat.Widget.ActionBar.Title" />

    <style name="CollapsingTextAppearance.Inverse">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="ToolBarWithNavigationBack">
        <item name="navigationIcon">@drawable/ic_back</item>
    </style>

    <style name="form_label">
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">

    </style>

    <style name="App_Button" parent="Widget.AppCompat.Button.Borderless">

    </style>

    <style name="App_Button.Submit" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/submit_btn_flat_bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">20dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:colorButtonNormal" tools:targetApi="lollipop">@color/navy</item>
    </style>

    <style name="App_Button.Submit.Rounded">
        <item name="android:background">@drawable/submit_btn_bg</item>
    </style>

    <style name="App_Button.Borderless" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="App_Button.Setting" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:gravity">left</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="App_Button.Setting.Navigation">
        <item name="android:drawableRight">@drawable/ic_next</item>
    </style>

    <style name="App_ActionBar" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="titleTextStyle">@style/ActionBarTitleText</item>
        <item name="background">@color/white</item>
        <item name="android:textColorSecondary">@color/accent</item>
    </style>

    <style name="ActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/accent</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="App_Text" parent="TextAppearance.AppCompat"></style>

    <style name="App_Text.White">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="App_Text.Error">
        <item name="android:textColor">@color/text_error</item>
        <item name="android:textStyle">italic</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_gravity">right</item>
    </style>

    <style name="App_Text.Caption">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/text_caption</item>
    </style>

    <style name="App_Text.OnlineStatus">
        <item name="android:lines">1</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:drawableLeft">@drawable/online_status</item>
        <item name="android:textColor">@color/online_status_color</item>
    </style>

</resources>
