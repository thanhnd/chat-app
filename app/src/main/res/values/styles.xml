<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/black</item>
        <item name="editTextStyle">@style/App_EditTextStyle</item>

    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="App_EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/edit_text_color</item>
        <item name="android:textColorHint">@color/edit_text_hint_color</item>
    </style>

    <style name="TextAppearance.Small" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.Small.UnderLine">
        <item name="android:background">#00000000</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Button.Submit" parent="@android:style/TextAppearance.Small">
        <item name="android:background">#56ccd6</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>
