<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/black</item>
        <item name="editTextStyle">@style/App_EditTextStyle</item>
        <item name="imageButtonStyle">@style/App_ImageButtonStyle</item>
        <item name="android:windowBackground">@color/white</item>

    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/bg</item>
    </style>

    <style name="App_EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/edit_text_color</item>
        <item name="android:textColorHint">@color/edit_text_hint_color</item>
        <item name="android:background">@null</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>

    </style>

    <style name="App_TextViewClickableStyle" parent="TextAppearance.AppCompat.Medium.Inverse">
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/edit_text_color</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="App_ImageButtonStyle" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">?selectableItemBackgroundBorderless</item>

    </style>

    <style name="TextAppearance.Small" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.Small.UnderLine">
        <item name="android:background">#00000000</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Button.Submit" parent="@android:style/TextAppearance.Small">
        <item name="android:background">#56ccd6</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="CollapsingTextAppearance" parent="Base.TextAppearance.AppCompat.Widget.ActionBar.Title"/>
    <style name="CollapsingTextAppearance.Inverse" >
        <item name="android:textSize">30sp</item>
    </style>
    <style name="ToolBarWithNavigationBack">
        <item name="navigationIcon">@drawable/ic_back</item>
    </style>

    <style name="online_status">
        <item name="android:lines">1</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:drawableLeft">@drawable/online_status</item>
        <item name="android:textColor">@color/online_status_color</item>
    </style>

    <style name="form_label">
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">

    </style>

</resources>
