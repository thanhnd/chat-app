<?xml version="1.0" encoding="utf-8"?>
<ScrollView  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".mvp.forgotpassword.ForgotPasswordActivity"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/layout_forgot_password_enter_email"
            android:id="@+id/v_enter_email"
            android:visibility="gone"/>

        <include layout="@layout/layout_forgot_password_verify_code"
            android:id="@+id/v_verify_code"
            android:visibility="gone"/>

        <include layout="@layout/layout_forgot_password_new_password"
            android:id="@+id/v_new_password"
            android:visibility="gone"/>

        <include layout="@layout/layout_forgot_password_finish"
            android:id="@+id/v_finish"
            android:visibility="gone"/>

    </FrameLayout>
</ScrollView>

