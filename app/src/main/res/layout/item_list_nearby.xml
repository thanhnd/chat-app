<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="@dimen/list_img_boundary_diameter"
        android:layout_height="@dimen/list_img_boundary_diameter"
        android:layout_gravity="center"
        android:gravity="center">


        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="@dimen/list_img_diameter_with_border"
            android:layout_height="@dimen/list_img_diameter_with_border"
            android:layout_gravity="center"
            android:background="@drawable/circle_purge"
            android:padding="2dp"
            android:src="@drawable/img_user_avatar" />
        <ImageView
            android:id="@+id/iv_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_avatar"
            android:layout_marginLeft="22dp"
            android:layout_marginBottom="-6dp"
            android:src="@drawable/ic_status_favorite_small" />

        <ImageView
            android:id="@+id/iv_friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginBottom="6dp"
            android:layout_alignBottom="@id/iv_favorite"
            android:src="@drawable/ic_status_friend_small" />

        <ImageView
            android:id="@+id/iv_block"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-4dp"
            android:layout_marginBottom="14dp"
            android:layout_alignBottom="@id/iv_friend"
            android:src="@drawable/ic_status_block_small" />
    </RelativeLayout>


    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ellipsize="marquee"
        android:gravity="center"
        android:lines="1"
        style="@style/App_Text.White"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:drawableLeft="@drawable/ic_distance_small"
        android:drawablePadding="2dp"
        android:gravity="center"
        android:textColor="@color/gray"
        android:textSize="11sp" />

</LinearLayout>