<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:background="@drawable/bg_corner_white"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="12dp">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="@dimen/scm_form_padding"
        android:text="@string/dialog_confirm_title"
        android:textColor="#333"
        android:textSize="@dimen/scm_text_big"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/scm_padding_large"
        android:gravity="center"
        android:maxWidth="300dp"
        android:minWidth="240dp"
        android:text="Goldpot reminder"
        android:textColor="#333"
        android:textSize="17sp" />

    <include layout="@layout/layout_confirm_dialog_footer" />
</LinearLayout>