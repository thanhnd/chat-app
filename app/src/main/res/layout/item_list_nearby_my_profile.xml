<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="@dimen/list_img_boundary_diameter"
        android:layout_height="@dimen/list_img_boundary_diameter"
        android:layout_gravity="center"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circle_purge_transparent"
            android:padding="6dp">

            <ImageView
                android:id="@+id/iv_avatar"
                android:layout_width="@dimen/list_img_diameter_with_border"
                android:layout_height="@dimen/list_img_diameter_with_border"
                android:layout_gravity="center"
                android:background="@drawable/circle_light_purge"
                android:padding="@dimen/avatar_border"
                android:src="@drawable/img_user_avatar" />
        </RelativeLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_name"
        style="@style/App_Text.White"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ellipsize="marquee"
        android:gravity="center"
        android:lines="1"
        android:textSize="12sp" />

</LinearLayout>