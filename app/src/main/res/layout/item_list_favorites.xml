<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:background="@drawable/circle_light_purge"
        android:id="@+id/iv_avatar"
        android:layout_width="@dimen/list_img_diameter"
        android:layout_height="@dimen/list_img_diameter"
        android:layout_gravity="center"
        android:src="@drawable/img_user_avatar" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="marquee"
        android:gravity="center"
        android:lines="1"
        style="@style/App_Text.White"
        android:layout_marginTop="10dp"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_online_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:textSize="11sp"
        style="@style/App_Text.OnlineStatus" />

</LinearLayout>